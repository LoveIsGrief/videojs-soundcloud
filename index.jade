html
	head

		//- !-- Mandatory videojs include! --
		link(href="bower_components/video.js/dist/video-js.css" rel="stylesheet")
		script(src="bower_components/video.js/dist/video.js")
		script(src="dist/media.soundcloud.dev.js")


		style.
			#myAudio {
				width: 100%;
				height: 360px;
			}


		//- To make livereload work
		script(src="http://localhost:35729/livereload.js")

		//- Change soundcloud source
		script.
			function updateSource(){
				source = document.getElementById("source").value
				console.debug("Setting new source: " + source);
				videojs("myAudio", {
						techOrder: ["Soundcloud"],
					// "sources": [source],
					}, function(){}
				).src({
					src: source,
					type: "audio/soundcloud"
				});

			}
			window.addEventListener("load", updateSource)

		title videojs-souncloud test

	body
		h1 videojs-souncloud example

		form(
			onsubmit="updateSource();return false"
			method="post"
			)
			input#source(
				type="text"
				value="https://soundcloud.com/vaughan-1-1/this-is-what-crazy-looks-like"

				)
			input(
				type="submit"
				value="Submit"
				)
		video#myAudio(
			class="video-js vjs-default-skin"
			controls
			)
